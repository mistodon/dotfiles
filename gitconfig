[diff]
    tool = vimdiff
[user]
    useconfigonly = true
[core]
    excludesfile = ~/.dotfiles/git/.gitignore
    hookspath = ~/.dotfiles/git/hooks
    editor = vim
    ignorecase = false
[branch]
    autosetupmerge = always
[push]
    default = current
[pull]
    rebase = true
[alias]
    freeze = update-index --assume-unchanged
    unfreeze = update-index --no-assume-unchanged
    frozen = !git ls-files -v | grep "^[[:lower:]]"
    a = add
    aa = add --all
    amend = commit --amend
    b = branch
    d = diff
    dd = diff --cached
    c = checkout
    ci = commit --verbose
    f = fetch
    last = log -1 --oneline
    r = git reset
    s = status
[credential]
	helper = osxkeychain
[init]
	defaultBranch = main
